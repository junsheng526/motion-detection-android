<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_color"
        android:title="User"
        android:titleTextColor="@color/text_black" />

    <!-- Camera Preview with 3:4 ratio -->
    <FrameLayout
        android:id="@+id/inoutpreviewFrame"
        android:layout_width="360dp"
        android:layout_height="480dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="center">

        <androidx.camera.view.PreviewView
            android:id="@+id/inoutpreviewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222" />
        <com.kiayee_motiondetectapplication.view.DrawInOutView
            android:id="@+id/lineOverlayview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
    </FrameLayout>

    <!-- Future Buttons -->
    <Button
        android:id="@+id/select_in_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select in line"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/button_color"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/select_out_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select out line"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/button_color"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/confirm_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/button_color"
        android:textColor="#FFFFFF" />

</LinearLayout>
